{
  "name": "poetrix",
  "publisher": "dudulasry",
  "displayName": "poetrix",
  "description": "An extension that ease the work with Poetry",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "poetrix.updateDependencies",
          "group": "3_files",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "poetrix.installDependencies",
          "group": "3_files",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "poetrix.activateEnvironment",
          "group": "3_files",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "commands": [
      {
        "command": "poetrix.updateDependencies",
        "title": "Update Poetry Dependencies"
      },
      {
        "command": "poetrix.installDependencies",
        "title": "Install Poetry Dependencies"
      },
      {
        "command": "poetrix.activateEnvironment",
        "title": "Activate Poetry Environment"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.2.0"
  }
}
